@using System.Web.UI.WebControls
@using Sitecore
@using Sitecore.Data.Items
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.Theming.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel
@{ 
    var style = "background-image: url('";
    style += @Model.Rendering.GetBackgroundImage() + "')";

}
<section class="section section-full @Model.Rendering.GetBackgroundClass()" style="@style">
  @Html.Sitecore().DynamicPlaceholder("section", Model.Rendering.GetUseStaticPlaceholderNames())
</section>